@page
@model IndexModel

<h1 class="mb-4">Categories</h1>
<div class="row">
    @foreach (var item in @Model.Categories)
    {
        <div class="col-md-6 col-lg-4 mb-3">
            <a class="d-block border rounded-lg text-decoration-none px-3 py-2" asp-page="./Details" asp-route-id="@item.level1Category">@item.text</a>
        </div>
    }    
</div>